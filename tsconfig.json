    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "typeRoots" : ["node_modules/@types", "src/types"]
    },
    "include": [
        "./src/**/*"
